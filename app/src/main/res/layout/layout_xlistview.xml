<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

 <RelativeLayout
     android:layout_margin="9dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/recyshaper">
     <LinearLayout
         android:id="@+id/menchant_linear"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/menchant_pic"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginLeft="7dp" />

         <TextView
             android:id="@+id/menchant_title"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="7dp"
             android:layout_weight="1"
             android:text="我是商家"
             android:textSize="20sp" />
     </LinearLayout>


     <android.support.v7.widget.RecyclerView
         android:background="@color/colorffffff"
         android:id="@+id/menchant_recycle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/menchant_linear"></android.support.v7.widget.RecyclerView></RelativeLayout>
</RelativeLayout>