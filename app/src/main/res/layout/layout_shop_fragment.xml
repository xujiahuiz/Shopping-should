<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btshaper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/colorffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/compile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/btshaper"
            android:gravity ="center"
            android:text="编辑"
            android:textColor="@color/colorffffff"
            android:textSize="20dp" />

    </LinearLayout>


    <com.example.xlistviewlib.XListView
        android:id="@+id/shop_xlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/shop_xlistview"
        android:layout_below="@id/shop_title"
        android:background="@color/colorC0C0C0">


    </com.example.xlistviewlib.XListView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/shop_xlistview"
        android:layout_alignParentBottom="true"
        android:background="@color/colorffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:src="@drawable/ck_no" />

        <TextView

            android:id="@+id/total_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="总价:0.0" />

        <TextView
            android:id="@+id/total_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_weight="4"
            android:background="@color/colorFD2F3B"
            android:gravity="center"
            android:text="总数(0)"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>
